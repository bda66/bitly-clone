<%= form_for @link, html: { multipart: true } do |f| %>
  <% if action_name == 'edit' || action_name == 'update' %>
  <div class="form-group">
    <%= f.label :short_url %>
    <%= f.text_field :short_url, class: 'form-control' %>
  </div>
  <% else %>
    <div class="form-group">
      <%= f.label :original_url %>
      <%= f.text_field :original_url, class: 'form-control' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit 'Save' %>
  </div>
<% end %>
