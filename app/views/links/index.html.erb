<p id="notice"><%= notice %></p>

<h1>User links</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_links.each do |link| %>
      <tr>
        <td>Original url: <%= link_to(link.original_url) %> | </td>
        <td>Short url: <%= link_to("#{root_url}#{link.short_url}", "#{root_url}#{link.short_url}") %> | </td>
        <td>Clicks count: <%= link.clicks_count %> | </td>
        <td><%= link_to 'Edit', edit_link_path(link) %></td>
        <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Link', new_link_path %>
